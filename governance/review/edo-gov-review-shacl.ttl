@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix edogovrev: <https://w3id.org/energy-domain/edogov-review#> .

# Shape for Comment
:CommentShape a sh:NodeShape ;
  sh:targetClass edogovrev:Comment ;
  sh:property [
    sh:path edogovrev:commentBody ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
  ] ;
  sh:property [ sh:path edogovrev:createdBy ; sh:datatype xsd:string ; sh:minCount 1 ] ;
  sh:property [ sh:path edogovrev:createdAt ; sh:datatype xsd:dateTime ; sh:minCount 1 ] ;
  sh:property [ sh:path edogovrev:hasStatus ; sh:minCount 1 ] .

# Shape for Thread
:ThreadShape a sh:NodeShape ;
  sh:targetClass edogovrev:Thread ;
  sh:property [ sh:path edogovrev:aboutEntity ; sh:minCount 1 ] ;
  sh:property [ sh:path edogovrev:hasComment ; sh:minCount 1 ] .